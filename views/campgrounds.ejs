<% include partials/header %>

<!-- campgrounds.ejs ;lesson 259 -->

<div class="container">

<header class="jumbotron">

<div class="container">

<h1>Welcome to Yelp Camp!</h1>

<p>View all of our campgrounds!</p>

<p>

<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>

</p>

</div>

</header>

<h3>Our most popular campgrounds!</h3>

<div class="row" style="display:flex; flex-wrap: wrap;">

<% campgrounds.forEach(function(campground){ %>

<div class="col-md-3 col-sm-6"> <!-- MAKING IT RESPONSIVE -->

<div class="thumbnail">

<img src="<%= campground.image %>">

<div class="caption">

<h4><%= campground.name %></h4>

</div>

</div>

</div>

<% }); %>

</div>

</div>

<% include partials/footer %>